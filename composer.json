{
  "name": "savvywombat/color",
  "description": "Package for manipulating colors in multiple color spaces.",
  "type": "library",
  "homepage": "https://github.com/SavvyWombat/color-php",
  "keywords": ["color", "savvywombat", "savvy wombat", "rgb", "hsl", "color space"],
  "license": "MIT",
  "authors": [
    {
      "name": "Stuart Jones",
      "email": "stuart@savvywombat.com.au"
    }
  ],
  "require": {
    "php": "^7.2"
  },
  "autoload": {
    "psr-4": {
      "SavvyWombat\\Color\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SavvyWombat\\Color\\Test\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "lint": "vendor/bin/php-cs-fixer fix . --config=.php_cs -v --dry-run --stop-on-violation --using-cache=no"
  }
}
