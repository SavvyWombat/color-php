{
  "name": "savvywombat/color",
  "description": "Package for manipulating colors in multiple color spaces.",
  "type": "library",
  "homepage": "https://github.com/SavvyWombat/color-php",
  "keywords": ["color", "colors", "hex", "rgb", "hsl", "color space", "transform", "convert", "conversion", "manipulation", "savvywombat", "savvy wombat"],
  "license": "MIT",
  "authors": [
    {
      "name": "Stuart Jones",
      "email": "stuart@savvywombat.com.au",
      "homepage": "https://savvywombat.com.au",
      "role": "creator"
    }
  ],
  "require": {
    "php": "^7.4||^8"
  },
  "autoload": {
    "psr-4": {
      "SavvyWombat\\Color\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SavvyWombat\\Color\\Test\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "lint": "vendor/bin/php-cs-fixer fix . -v --dry-run --stop-on-violation --using-cache=no"
  }
}
